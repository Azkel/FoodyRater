<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodyRater</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <environment names="Development">
        <link rel="stylesheet" href="~/css/side-menu.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/side-menu.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)

    <!--[if lte IE 8]>
        <link rel="stylesheet" href="css/side-menu-old-ie.css">
    <![endif]-->

</head>
<body>
    <div id="layout">
        <!-- Menu toggle -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>
        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="#">FoodyRater</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item"><a class="pure-menu-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="pure-menu-item"><a class="pure-menu-link" asp-controller="Restaurants" asp-action="Index">Restaurants</a></li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">
        <script src="~/js/ui.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/ui.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
